<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003" author="your-name">
        <createTable tableName="books">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="author" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="genre" type="VARCHAR(100)"/>
            <column name="language" type="VARCHAR(50)"/>
            <column name="isbn" type="VARCHAR(13)">
                <constraints unique="true"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="AVAILABLE">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="VARCHAR(512)"/>
            <column name="category_id" type="INT"/>
        </createTable>

        <!-- Add Foreign Key -->
        <addForeignKeyConstraint
            baseTableName="books"
            baseColumnNames="category_id"
            constraintName="fk_books_category"
            referencedTableName="categories"
            referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>